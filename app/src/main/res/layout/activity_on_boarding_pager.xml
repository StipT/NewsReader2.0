<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:hapticFeedbackEnabled="false" android:id="@+id/constraintLayout"
        android:background="@drawable/ic_onboarding_background">

    <android.support.v4.view.ViewPager
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginStart="32dp" android:layout_marginBottom="64dp"
            android:id="@+id/onBoardingViewPager">
    </android.support.v4.view.ViewPager>

    <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
            android:id="@+id/dotsIndicatiorOnboarding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:dotsColor="@color/colorWhite"
            app:dotsStrokeColor="@color/colorAccent"
            app:dotsCornerRadius="8dp"
            app:dotsSize="16dp"
            app:dotsSpacing="4dp"
            app:dotsStrokeWidth="2dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/onBoardingViewPager"
            app:layout_constraintStart_toStartOf="@+id/onBoardingViewPager"
            app:layout_constraintEnd_toEndOf="@+id/onBoardingViewPager"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp"/>

</android.support.constraint.ConstraintLayout>